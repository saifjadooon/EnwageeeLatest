<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/job_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/employeeJobProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/upload_pic_bg" />

        <TextView
            android:id="@+id/tvPlacementName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxWidth="140dp"
            android:maxLines="1"
            android:text="Product Designer"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/employeeJobProfile"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvPlacementType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:text="3M Library Systems - Full Time"
            android:textColor="@color/BLACK_SECONDARY"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/employeeJobProfile"
            app:layout_constraintTop_toBottomOf="@+id/tvPlacementName" />


        <View
            android:id="@+id/education_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#F0F1F3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/employeeJobProfile" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cr_placementPill"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:paddingVertical="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvPlacementName"
            app:layout_constraintStart_toEndOf="@+id/tvPlacementName"
            app:layout_constraintTop_toTopOf="@+id/tvPlacementName">

            <TextView
                android:id="@+id/tvPlacementStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center"
                android:padding="1dp"
                android:maxWidth="120dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="In progress"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/green"
                android:textSize="10sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>