<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/convertToCandidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_convert_to_candidate" />

    <ImageView
        android:id="@+id/addToCandidateBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/convertToCandidate"
        app:layout_constraintStart_toStartOf="@+id/convertToCandidate"
        app:layout_constraintTop_toBottomOf="@+id/convertToCandidate"
        app:srcCompat="@drawable/ic_add_to_candidate_bank" />

    <ImageView
        android:id="@+id/remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/convertToCandidate"
        app:layout_constraintStart_toStartOf="@+id/convertToCandidate"
        app:layout_constraintTop_toBottomOf="@+id/addToCandidateBank"
        app:srcCompat="@drawable/ic_remove_online_applicant" />
</androidx.constraintlayout.widget.ConstraintLayout>