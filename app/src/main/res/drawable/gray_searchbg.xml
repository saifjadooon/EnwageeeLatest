<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with dark gray stroke and rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />

            <stroke
                android:width="1dp"
                android:color="@color/gray" />
        </shape>
    </item>
    <!-- Content with lighter gray -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="7dp" /> <!-- Adjust the radius slightly less than the stroke radius -->
            <solid android:color="@color/light_gray1" /> <!-- Adjust the content color as needed -->
        </shape>
    </item>
</layer-list>